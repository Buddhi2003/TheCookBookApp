<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/searchbg"
    tools:context=".UserUI.Search.SearchRecipeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_recipebar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="Search here...."
            style="@style/GlassmorphismSearchView"
            app:searchIcon="@null"
            app:iconifiedByDefault="false"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/trendingtagrecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:shadowColor="@color/gray"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="18"
            android:text="Trending Recipes"
            android:textSize="18dp"
            app:fontFamily="@font/bree_serif"
            app:layout_constraintEnd_toStartOf="@+id/chipgroup_search_recipe"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_recipebar" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipgroup_search_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_recipebar"
            app:singleSelection="true">


            <com.google.android.material.chip.Chip
                android:id="@+id/vegchip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Veg" />

            <com.google.android.material.chip.Chip
                android:id="@+id/nonvegchip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Non-Veg" />

        </com.google.android.material.chip.ChipGroup>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recipe_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipgroup_search_recipe" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>