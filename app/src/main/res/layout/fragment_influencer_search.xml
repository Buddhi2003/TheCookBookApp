<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/searchbg"
    tools:context=".UserUI.Search.SearchInfluencerFragment">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_influencerbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            style="@style/GlassmorphismSearchView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="Search here...."
            app:iconifiedByDefault="false"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trendingtaginf"
            android:textSize="28dp"
            android:layout_marginTop="10dp"
            app:fontFamily="@font/bree_serif"
            android:shadowColor="@color/gray"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="20"
            android:layout_marginStart="16dp"
            android:text="Trending Influencers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_influencerbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_influencer_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/trendingtaginf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>