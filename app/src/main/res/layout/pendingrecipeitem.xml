<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/logincardbgcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Recipenamependingitem"
                style="@style/TextAppearance.Material3.HeadlineMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/bree_serif"
                android:shadowRadius="8"
                android:shadowColor="@color/md_theme_scrim"
                android:shadowDy="2"
                android:shadowDx="2"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Recipe Name"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/RecipeImgpendingitem"
                android:layout_width="144dp"
                android:layout_height="132dp"
                android:elevation="10dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Recipenamependingitem"
                app:layout_constraintVertical_bias="0.0"
                app:shapeAppearanceOverlay="@style/RoundedSquare" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Infnamependingitem"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:shadowColor="@color/md_theme_error_highContrast"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textSize="15dp"
                android:text="Influencer"
                app:fontFamily="@font/bree_serif"

                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.946"
                app:layout_constraintStart_toEndOf="@+id/Recipenamependingitem"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmrecipeitem"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:text="Confirm"
                android:textSize="15dp"
                android:elevation="10dp"
                app:strokeWidth="2dp"
                app:icon="@drawable/baseline_done_24"
                app:iconSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.267"
                app:layout_constraintStart_toEndOf="@+id/RecipeImgpendingitem"
                app:layout_constraintTop_toBottomOf="@+id/Infnamependingitem" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/declinerecipeitem"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="Decline"
                android:elevation="10dp"
                android:textSize="15dp"
                app:strokeWidth="2dp"
                app:icon="@drawable/baseline_do_not_disturb_24"
                app:iconSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.267"
                app:layout_constraintStart_toEndOf="@+id/RecipeImgpendingitem"
                app:layout_constraintTop_toBottomOf="@+id/confirmrecipeitem"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>