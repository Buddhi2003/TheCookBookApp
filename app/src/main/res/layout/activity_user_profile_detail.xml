<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UserUI.Profile.UserProfileDetailActivity">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bg_detailsUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bgprofileuser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/backbutton_detailsUser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/deleteaccountUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_delete_sweep_24"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/GlassmorphismCard"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
           >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/Userpfp_details"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.RoundView"
                app:strokeColor="@color/light_orange"
                app:strokeWidth="2dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Username_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.Material3.HeadlineSmall"
                app:fontFamily="@font/bree_serif"
                android:shadowColor="@color/md_theme_scrim"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:padding="5dp"
                android:textSize="30dp"
                android:text="User Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Userpfp_details" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/likecountUserdetails"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/md_theme_scrim"
                android:shadowColor="@color/md_theme_scrim"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:padding="5dp"
                android:text="No"
                android:textAlignment="center"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Username_details" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider3"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="34dp"
                app:dividerColor="@color/light_gray"
                app:dividerThickness="1dp"
                app:layout_constraintStart_toEndOf="@+id/FavouriteCountUserdetails"
                app:layout_constraintTop_toBottomOf="@+id/Username_details" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/FavouriteCountUserdetails"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/lato_bold"
                android:padding="5dp"
                android:text="No"
                android:textColor="@color/md_theme_scrim"
                android:shadowColor="@color/md_theme_scrim"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:textAlignment="center"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Username_details" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                android:text="Favourites"
                android:textAlignment="center"
                android:textStyle="bold"
                app:fontFamily="@font/cantarell"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FavouriteCountUserdetails" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/CmntcountUserdetails"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/md_theme_scrim"
                android:shadowColor="@color/md_theme_scrim"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:padding="5dp"
                android:text="No"
                android:textAlignment="center"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@+id/materialDivider4"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toEndOf="@+id/materialDivider3"
                app:layout_constraintTop_toBottomOf="@+id/Username_details" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                android:text="Comments"
                android:textAlignment="center"
                android:textStyle="bold"
                app:fontFamily="@font/cantarell"
                app:layout_constraintEnd_toStartOf="@+id/materialTextView2"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toEndOf="@+id/materialTextView"
                app:layout_constraintTop_toBottomOf="@+id/CmntcountUserdetails" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:padding="5dp"
                android:text="Likes"
                android:textAlignment="center"
                android:textStyle="bold"
                app:fontFamily="@font/cantarell"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/likecountUserdetails" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider4"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="15dp"
                app:dividerColor="@color/light_gray"
                app:dividerThickness="1dp"
                app:layout_constraintEnd_toStartOf="@+id/likecountUserdetails"
                app:layout_constraintTop_toBottomOf="@+id/Username_details" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/editpofileinfouser"
                android:layout_marginTop="18dp"
                android:text="Edit profile"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_marginBottom="20dp"
                app:strokeWidth="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView3"
                app:layout_constraintVertical_bias="0.043" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView9"
        app:layout_constraintVertical_bias="0.0">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pichartuserdetail"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="10dp" />
    </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>