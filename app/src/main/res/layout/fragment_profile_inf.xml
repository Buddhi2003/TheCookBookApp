<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:padding="5dp"
    tools:context=".InflUI.Profile.ProfileInfFragment">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/Influencerpfp_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.RoundView"
                app:strokeColor="@color/light_orange"
                app:strokeWidth="2dp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/influencername_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                style="@style/TextAppearance.Material3.HeadlineLarge"
                app:fontFamily="@font/bree_serif"
                android:padding="5dp"
                android:textSize="28dp"
                android:text="Influencer Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Influencerpfp_profile" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_prof"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                app:icon="@drawable/baseline_edit_24"
                app:strokeWidth="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:text="Edit Profile"
                android:textColor="@color/md_theme_scrim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bio_details_profile"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_bold"
                android:padding="5dp"
                android:text="Bio"
                android:textAlignment="inherit"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView3" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/likecountinfdetailsprofile"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:padding="5dp"
                android:fontFamily="@font/secular_one"
                android:textStyle="bold"
                android:text="No"
                android:textSize="18dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/influencername_profile" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Subcountinfdetailsprofile"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="No"
                android:textSize="18dp"
                android:fontFamily="@font/secular_one"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/materialDivider4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/materialDivider3"
                app:layout_constraintTop_toBottomOf="@+id/influencername_profile" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/recipecountinfdetailsprofile"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="No"
                android:textSize="18dp"
                android:fontFamily="@font/secular_one"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/influencername_profile" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:padding="5dp"
                android:text="Likes"
                android:textAlignment="center"
                android:fontFamily="@font/secular_one"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/likecountinfdetailsprofile" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="36dp"
                android:padding="5dp"
                android:text="Subscribers"
                android:textAlignment="center"
                android:fontFamily="@font/secular_one"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/materialDivider4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/materialDivider3"
                app:layout_constraintTop_toBottomOf="@+id/Subcountinfdetailsprofile" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                android:text="Recipes"
                android:fontFamily="@font/secular_one"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipecountinfdetailsprofile" />


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider3"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                app:dividerColor="@color/light_gray"
                app:dividerThickness="1dp"
                app:layout_constraintBottom_toTopOf="@+id/bio_details_profile"
                app:layout_constraintStart_toEndOf="@+id/recipecountinfdetailsprofile"
                app:layout_constraintTop_toBottomOf="@+id/influencername_profile"
                app:layout_constraintVertical_bias="0.520" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider4"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                app:dividerColor="@color/light_gray"
                app:dividerThickness="1dp"
                app:layout_constraintBottom_toTopOf="@+id/bio_details_profile"
                app:layout_constraintEnd_toStartOf="@+id/likecountinfdetailsprofile"
                app:layout_constraintTop_toBottomOf="@+id/influencername_profile"
                app:layout_constraintVertical_bias="0.520" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layoutinfluencerdetailsprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="5dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bio_details_profile">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipes" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updates" />

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pagerInfluencerdetailsprofile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tab_layoutinfluencerdetailsprofile" />
</androidx.constraintlayout.widget.ConstraintLayout>